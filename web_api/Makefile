# Makefile - Dev commands for Fake API using uv

# ğŸš€ Run the FastAPI server locally with auto-reload
run:
	uvicorn app.app:app --reload

# ğŸ§ª Run all unit tests with pytest
test:
	pytest

# ğŸ“¦ Install dependencies via uv and install project locally
install:
	uv venv && uv pip install ../shared_module
	uv venv && uv pip install .

# ğŸ§¹ Delete all compiled Python files (.pyc)
clean-pyc:
	find . -name "*.pyc" -delete

# ğŸ” Install dependencies and start the server
all: install run
