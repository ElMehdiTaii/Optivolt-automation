{
  "dashboard": {
    "id": null,
    "uid": "optivolt-comparison",
    "title": "OptiVolt - Docker vs MicroVM vs Unikernel (Real Benchmark)",
    "tags": ["optivolt", "benchmark", "comparison"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "graph",
        "title": "CPU Usage Comparison (%)",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"optivolt.*\"}[1m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "percent",
            "label": "CPU Usage",
            "show": true
          }
        ],
        "xaxis": {
          "show": true
        },
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "min": true
        }
      },
