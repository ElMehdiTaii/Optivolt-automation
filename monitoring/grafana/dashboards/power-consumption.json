{
  "dashboard": {
    "id": null,
    "uid": "optivolt-power",
    "title": "OptiVolt - Power Consumption Monitoring",
    "tags": ["optivolt", "scaphandre", "power", "energy"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Total Host Power Consumption",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "scaph_host_power_microwatts / 1000000",
            "legendFormat": "Host Power (Watts)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "watt", "label": "Power", "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 2,
        "title": "Power by Socket",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "scaph_socket_power_microwatts / 1000000",
            "legendFormat": "Socket {{socket_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "watt", "label": "Power", "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 3,
        "title": "Top 10 Power Consuming Processes",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "topk(10, scaph_process_power_consumption_microwatts / 1000000)",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "cmdline": "Command",
                "pid": "PID",
                "Value": "Power (W)"
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %", "max": 100, "min": 0, "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Memory %", "max": 100, "min": 0, "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 6,
        "title": "Energy Efficiency (Watts per % CPU)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "(scaph_host_power_microwatts / 1000000) / (100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100))",
            "legendFormat": "Efficiency (W/%CPU)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "W/%CPU", "show": true},
          {"format": "short", "show": false}
        ]
      }
    ]
  },
  "overwrite": true
}
